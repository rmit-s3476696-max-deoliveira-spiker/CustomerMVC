@model IEnumerable<CustomerMVC.Models.Booking>

@{
    ViewBag.Title = "Index";
    var tempData = TempData["ConfirmBooking"] as CustomerMVC.Models.Booking;
    TempData.Keep("ConfirmBooking");
}

<h2>Booking Page</h2>

<table class="table">
    <tr>
        <th>
            Movie 
        </th>
        <th>
            Time
        </th>
        <th>
            Day
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ticket)
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @tempData.Movie_Title
        </td>
        <td>
            @tempData.Movie_Time
        </td>
        <td>
            @tempData.Session_Time
        </td>
        <td>
            $ @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.No_of_Ticket)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.First_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Last_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <p class="btn btn-default">@Html.ActionLink("Edit Booking", "Edit", new { id = item.Booking_ID })</p>
            <p class="btn btn-default">@Html.ActionLink("Delete Booking", "Delete", new { id = item.Booking_ID })</p>
            <p class="btn btn-default">@Html.ActionLink("Payment", "Create", "Payment")</p>
            
        </td>
    </tr>
}

</table>
