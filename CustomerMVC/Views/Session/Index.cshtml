@model IEnumerable<CustomerMVC.Models.Session>

@{
    ViewBag.Title = "Index";
}

<h2>Sessions</h2>
<p>
    @using (Html.BeginForm("Index", "Session", FormMethod.Get))
    {
    <p>
        Location: @Html.DropDownList("cinema", "All")
        Title: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
    }
    </p>
    <table class="table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Location
            </th>
            <th>
                Time
            </th>
            <th>
                Day
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie_Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Session_Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Session_Day)
                </td>
                <td>
                    <p class="btn btn-default">@Html.ActionLink("Make a Booking", "Details", new { id = item.Session_ID })</p>
                </td>
            </tr>
        }

    </table>
